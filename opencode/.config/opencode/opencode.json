{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "CONTEXT7_API_KEY"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["pnpm","dlx", "@playwright/mcp@latest"],
      "enabled": true
    }
  }
}
